<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.example.samplearchitecture.presentation.main.model.MatchesItems.Skeleton" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_4sdp">

        <xyz.peridy.shimmerlayout.ShimmerLayout
            android:id="@+id/itemShimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp">

                <View
                    android:id="@+id/vAvatar"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@drawable/shimmer_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/vMain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/vAvatar"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:background="@drawable/shimmer_background" />

                    <View
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/shimmer_background" />

                    <View
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/shimmer_background" />

                    <View
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/shimmer_background" />

                    <View
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/shimmer_background" />

                </LinearLayout>

                <View
                    android:id="@+id/vScore"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:background="@drawable/shimmer_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </xyz.peridy.shimmerlayout.ShimmerLayout>

    </androidx.cardview.widget.CardView>

</layout>