<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color_accent">@color/colorAccent</item>
        <item name="color_accent_button_text">@color/white</item>
        <item name="color_text_bold">@color/text_bold</item>
        <item name="color_text_regular">@color/regular_text</item>
        <item name="color_text_hint">@color/text_hint</item>
        <item name="edit_text_bg">@color/white</item>
        <item name="color_background">@color/background_color</item>
        <item name="error_background">@color/background_error</item>
        <item name="color_shimmer">@color/color_shimmer</item>
        <item name="color_text_inverse">@color/white</item>
        <item name="color_separator">@color/color_separator</item>
        <item name="color_alert">@color/light_red</item>
        <item name="color_info">@color/light_blue</item>
    </style>

    <style name="AccentButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">?color_accent_button_text</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="InverseButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/ic_button_background</item>
        <item name="android:textColor">?color_text_regular</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Text">
        <item name="android:textColor">?color_text_regular</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Text.Inverse" parent="Text">
        <item name="android:textColor">?color_text_inverse</item>
    </style>

    <style name="Text.Inverse.16" parent="Text.Inverse">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="Text.Inverse.12" parent="Text.Inverse">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text.Inverse.14" parent="Text.Inverse">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Text.14" parent="Text">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Text.12" parent="Text">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text.Error" parent="Text">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">?error_background</item>
    </style>

    <style name="Text.Error.14" parent="Text.Error">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Text.16" parent="Text">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="Text.Bold.16" parent="Text">
        <item name="android:textColor">?color_text_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Bold.14" parent="Text.Bold.16">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Text.Bold.12" parent="Text.Bold.16">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text.Bold.10" parent="Text.Bold.16">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="Text.Hint" parent="Text">
        <item name="android:textColor">?color_text_hint</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text.Accent" parent="Text">
        <item name="android:textColor">?color_accent</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text.Accent.16" parent="Text.Accent">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="Text.Accent.14" parent="Text.Accent">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

</resources>
